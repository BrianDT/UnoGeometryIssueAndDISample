    <RootNamespace>Vssl.Samples.FrameworkInterfaces</RootNamespace>
    <AssemblyName>Vssl.Samples.FrameworkInterfaces</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="StyleCop.Cache" />
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="..\VSSL.ruleset" Link="VSSL.ruleset" />
